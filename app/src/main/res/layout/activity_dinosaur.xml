<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/dinosour_background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/kakaotalk"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/kakaotalk"
        />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook_icon"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="170dp"
            android:id="@+id/facebook"
            />
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/pentagon"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="220dp"
        android:id="@+id/gotofoxlauncher"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/youtube_icon"
            android:layout_marginTop="315dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/youtube"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/playstore_icon"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="315dp"
            android:id="@+id/playstore"
            />

    </LinearLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/setup2"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/option"
            />
    </RelativeLayout>

</LinearLayout>